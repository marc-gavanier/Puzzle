{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"target": "ES2017",
		"lib": ["es2017", "dom"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "dist/js",
		"noEmitOnError": true,
		"typeRoots": [ "node_modules/@types" ]
	},
	"include": ["src/**/*"]
}
